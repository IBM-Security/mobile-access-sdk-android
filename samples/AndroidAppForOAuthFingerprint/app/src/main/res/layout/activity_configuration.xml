<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context="com.ibm.security.demoapps.oauthdemo.ConfigurationActivity">
    <TableLayout
        android:id="@+id/TableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:shrinkColumns="1" >

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/auth_endpoint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/authorization_endpoint_ip"
        android:textColor="@color/textColor"
        android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/TableRow02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/auth_endpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/textColor"
        android:textSize="16sp" />
</TableRow>

<TableRow
    android:id="@+id/TableRow03"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/ClientID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ClientID"
        android:textColor="@color/textColor"
        android:textSize="16sp" />
</TableRow>
<TableRow
    android:id="@+id/TableRow04"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/clientid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/textColor"
            android:textSize="16sp" />
    </TableRow>

    <TableRow

        android:id="@+id/TableRow05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/button_savesettings"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="SAVE"
            android:onClick="onClickSaveConfiguration"/>
        <Button
            android:id="@+id/button_cancelsettings"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:onClick="onClickGoToMain"/>
    </TableRow>


    </TableLayout>
</RelativeLayout>
