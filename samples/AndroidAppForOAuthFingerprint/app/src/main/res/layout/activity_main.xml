<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibm.security.demoapps.oauthdemo.MainActivity"
    android:background="@color/background_dark">

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="DEMO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:backgroundTint="@android:color/darker_gray"
        android:hint="Username"
        android:inputType="textNoSuggestions"
        android:shadowColor="@android:color/darker_gray"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHint="?android:attr/textColorHintInverse"
        android:textColorLink="@color/white" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textNoSuggestions"
        android:backgroundTint="@android:color/darker_gray"
        android:shadowColor="@android:color/darker_gray"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHint="?android:attr/textColorHintInverse"
        android:textColorLink="@color/white"
        android:layout_below="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername"
        android:layout_alignEnd="@+id/etUsername" />

    <EditText
        android:id="@+id/setPinNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:shadowColor="@android:color/darker_gray"
        android:ems="10"
        android:hint="PinNumber"
        android:inputType="number"
        android:visibility="visible"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="16dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHint="?android:attr/textColorHintInverse"
        android:textColorLink="@color/white"
        android:layout_below="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword" />/>

    <Button
        android:id="@+id/button_get_token"
        android:layout_width="256dp"
        android:layout_height="74dp"
        android:layout_marginTop="82dp"
        android:layout_alignParentBottom="true"
        android:text="Get OAuth Token"
        android:layout_marginBottom="4dp"
        android:theme="@style/PrimaryButton"
        android:layout_centerHorizontal="true"
        android:onClick="onClickUseGetOAuthToken"/>


